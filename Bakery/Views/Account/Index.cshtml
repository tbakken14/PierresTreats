@{
    Layout = "_Layout";
}

<h2>Account Manager</h2>
<hr />
@if (User.Identity.IsAuthenticated)
{
    <h3>Logged in as:</h3>
    <p>@User.Identity.Name!</p>
    @using (Html.BeginForm("LogOff", "Account"))
    {
        <input type="submit" class="btn small" value="Log out" />
    }
}
else
{
    <p>@Html.ActionLink("Register", "Register", new {}, new {@class="btn small"})</p>
    <p>@Html.ActionLink("Log in", "Login", new {}, new {@class="btn small"})</p>
}