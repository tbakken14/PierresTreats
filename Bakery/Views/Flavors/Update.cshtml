@{
    Layout = "_Layout";
}

@model Bakery.Models.Flavor

<h2>Flavors</h2>
<hr>
<h3>Edit Flavor</h3>

@using (Html.BeginForm("Update", "Flavors"))
{
    @Html.HiddenFor(model => model.FlavorId)
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new {required="true"})
    <input type="submit" value="Update Flavor" />
}