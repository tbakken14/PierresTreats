@{
    Layout = "_Layout";
}

@using Bakery.Models

<h2>Flavors</h2>
<hr>
<h3>Flavor Navigator</h3>

@if (Model.Count == 0)
{
    <p>No flavors</p>
}
@foreach (Flavor flavor in Model)
{
    @Html.ActionLink(flavor.Name, "Details", new {id = flavor.FlavorId}, new {@class="btn small item"})
    <br>
}

@Html.ActionLink("New Flavor", "Create", "Flavors", new {}, new {@class="btn small"})